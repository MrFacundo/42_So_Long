{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc -g (debug) build",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "../srcs/*.c",
                "../libft/*.c",
                "../libft/libft.a",
                "-L",
                "-lmlx",
                "-lXext",
                "-lX11",
                "-lm",
                "-lbsd",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}